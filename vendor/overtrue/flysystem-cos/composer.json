{
    "name": "overtrue/flysystem-cos",
    "description": "Flysystem adapter for the QCloud COS storage.",
    "require": {
        "php": ">=8.0.2",
        "league/flysystem": "^3.0",
        "overtrue/qcloud-cos-client": "^2.1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.0",
        "league/flysystem-adapter-test-utilities": "^3.0",
        "brainmaestro/composer-git-hooks": "dev-master",
        "laravel/pint": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Overtrue\\Flysystem\\Cos\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Overtrue\\Flysystem\\Cos\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "overtrue",
            "email": "i@overtrue.me"
        }
    ],
    "license": "MIT",
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer fix-style",
                "composer test"
            ],
            "pre-push": [
                "composer test",
                "composer check-style"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks remove",
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks remove",
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "vendor/bin/cghooks",
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint",
        "test": "phpunit --colors=always"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
